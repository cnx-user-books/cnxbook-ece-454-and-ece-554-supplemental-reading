       <m:mrow><m:mo>[</m:mo> <m:mrow>
        <m:mi>x</m:mi><m:mo stretchy="false">(</m:mo><m:mi>n</m:mi><m:mo stretchy="false">)</m:mo><m:mo>+</m:mo><m:mi>z</m:mi><m:mo stretchy="false">(</m:mo><m:mi>n</m:mi><m:mo stretchy="false">)</m:mo>
       </m:mrow> <m:mo>]</m:mo></m:mrow>
      </m:mrow>
     </m:mstyle><m:mrow><m:mo>[</m:mo> <m:mrow>
      <m:mi>x</m:mi><m:mo stretchy="false">(</m:mo><m:mi>n</m:mi><m:mo>−</m:mo><m:mi>m</m:mi><m:mo stretchy="false">)</m:mo><m:mo>+</m:mo><m:mi>z</m:mi><m:mo stretchy="false">(</m:mo><m:mi>n</m:mi><m:mo>−</m:mo><m:mi>m</m:mi><m:mo stretchy="false">)</m:mo>
     </m:mrow> <m:mo>]</m:mo></m:mrow>
    </m:mtd>
   </m:mtr>
   <m:mtr>
    <m:mtd>
     <m:mrow/>
    </m:mtd>
   </m:mtr>
   <m:mtr>
    <m:mtd>
     <m:mtext> </m:mtext><m:mtext> </m:mtext><m:mtext> </m:mtext><m:mtext> </m:mtext><m:mo>=</m:mo><m:mfrac>
      <m:mn>1</m:mn>
      <m:mi>M</m:mi>
     </m:mfrac>
     <m:mstyle displaystyle="true">
      <m:munderover>
       <m:mo>∑</m:mo>
       <m:mrow>
        <m:mi>n</m:mi><m:mo>=</m:mo><m:mn>0</m:mn>
       </m:mrow>
       <m:mrow>
        <m:mi>M</m:mi><m:mo>−</m:mo><m:mn>1</m:mn>
       </m:mrow>
      </m:munderover>
      <m:mrow>
       <m:mi>x</m:mi><m:mo stretchy="false">(</m:mo><m:mi>n</m:mi><m:mo stretchy="false">)</m:mo><m:mi>x</m:mi><m:mo stretchy="false">(</m:mo><m:mi>n</m:mi><m:mo>−</m:mo><m:mi>m</m:mi><m:mo stretchy="false">)</m:mo>
      </m:mrow>
     </m:mstyle><m:mo>+</m:mo><m:mfrac>
      <m:mn>1</m:mn>
      <m:mi>M</m:mi>
     </m:mfrac>
     <m:mstyle displaystyle="true">
      <m:munderover>
       <m:mo>∑</m:mo>
       <m:mrow>
        <m:mi>n</m:mi><m:mo>=</m:mo><m:mn>0</m:mn>
       </m:mrow>
       <m:mrow>
        <m:mi>M</m:mi><m:mo>−</m:mo><m:mn>1</m:mn>
       </m:mrow>
      </m:munderover>
      <m:mrow>
       <m:mrow><m:mo>[</m:mo> <m:mrow>
        <m:mi>x</m:mi><m:mo stretchy="false">(</m:mo><m:mi>n</m:mi><m:mo stretchy="false">)</m:mo><m:mi>z</m:mi><m:mo stretchy="false">(</m:mo><m:mi>n</m:mi><m:mo>−</m:mo><m:mi>m</m:mi><m:mo stretchy="false">)</m:mo><m:mo>+</m:mo><m:mi>z</m:mi><m:mo stretchy="false">(</m:mo><m:mi>n</m:mi><m:mo stretchy="false">)</m:mo><m:mi>x</m:mi><m:mo stretchy="false">(</m:mo><m:mi>n</m:mi><m:mo>−</m:mo><m:mi>m</m:mi><m:mo stretchy="false">)</m:mo>
       </m:mrow> <m:mo>]</m:mo></m:mrow>
      </m:mrow>
