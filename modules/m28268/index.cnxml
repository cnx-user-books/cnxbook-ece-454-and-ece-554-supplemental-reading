                              <m:mo stretchy="false">+</m:mo>
                              <m:mrow/>
                            </m:mrow>
                          </m:mrow>
                        </m:mstyle>
                      </m:msubsup>
                    </m:mrow>
                    <m:mo stretchy="false">(</m:mo>
                    <m:mi>m</m:mi>
                    <m:mrow>
                      <m:mo stretchy="false">)</m:mo>
                      <m:mo stretchy="false">=</m:mo>
                      <m:mfrac>
                        <m:mn>1</m:mn>
                        <m:mrow>
