      <para id="element-924"><m:math display="block">
 <m:semantics>
  <m:mrow>
   <m:mi>Φ</m:mi><m:mo stretchy="false">(</m:mo><m:mi>ω</m:mi><m:mo stretchy="false">)</m:mo><m:mo>=</m:mo><m:msup>
