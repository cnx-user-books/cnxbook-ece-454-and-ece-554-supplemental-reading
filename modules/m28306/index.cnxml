                        <m:mi>ω</m:mi>
                      </m:mrow>
                      <m:mrow>
                        <m:mrow>
                          <m:mn>1</m:mn>
                          <m:mo stretchy="false">−</m:mo>
                          <m:mn>0</m:mn>
                        </m:mrow>
                        <m:mtext>.</m:mtext>
                        <m:mn>8</m:mn>
                        <m:mtext>cos</m:mtext>
